<!-- Include Header and Pass Variables -->
<%- include("../layout/header.ejs", { userId: userId, profileImage: profileImage }) %>

<div class="container">
    <h2 class="text-center mb-4">Add Blog</h2>
    <form action="/blogs/create" method="POST" enctype="multipart/form-data" id="addBlogForm" class="p-4 shadow bg-white rounded">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter blog title" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4" placeholder="Enter blog description" required></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" id="image" name="image" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary w-100 addblog">Submit</button>
    </form>
</div>

<!-- Include Footer -->
<%- include("../layout/footer.ejs") %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
